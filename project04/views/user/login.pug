extends layout

block content
    h1 Login
    form(action='/users/login', method='post')
        label(for='username') Username:
        input(type='text', name='username', required)
        br
        label(for='password') Password:
        input(type='password', name='password', required)
        br
        button(type='submit') Login
    if error
        p.error= error
